{
    "name": "codeclimate-action",
    "version": "3.0.0",
    "private": true,
    "description": "Publish code coverage to Code Climate",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "test": "tape -r ts-node/register/transpile-only test/*.test.ts",
        "coverage": "nyc tape -r ts-node/register/transpile-only test/*.test.ts",
        "format": "prettier --write src/*.ts test/*.ts",
        "format:check": "prettier --check src/*.ts test/*.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/paambaati/codeclimate-action.git"
    },
    "keywords": [
        "actions",
        "codeclimate",
        "quality",
        "coverage"
    ],
    "author": "GP <me@httgp.com>",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.6.0",
        "@actions/exec": "^1.1.1",
        "@actions/github": "^5.0.1",
        "@actions/glob": "^0.3.0",
        "hook-std": "^2.0.0",
        "node-fetch": "^2.6.7",
        "nyc": "^15.1.0",
        "openpgp": "^5.2.1"
    },
    "devDependencies": {
        "@types/node": "^17.0.23",
        "@types/node-fetch": "^2.6.1",
        "@types/sinon": "^10.0.11",
        "@types/tape": "^4.13.0",
        "nock": "^13.2.4",
        "prettier": "^2.6.2",
        "sinon": "^13.0.2",
        "tape": "^5.5.3",
        "to-readable-stream": "^2.1.0",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3"
    }
}
